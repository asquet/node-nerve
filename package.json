{
  "name": "node-nerve",
  "version": "0.0.78",
  "description": "node server for nervejs framework",
  "main": "dist/app",
  "typings": "dist/app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nervejs/node-nerve.git"
  },
  "keywords": [
    "framework",
    "nervejs",
    "nerve",
    "rendering"
  ],
  "author": "denis.yarkeev@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nervejs/node-nerve/issues"
  },
  "homepage": "https://github.com/nervejs/node-nerve#readme",
  "devDependencies": {
    "@types/cookie-parser": "^1.3.30",
    "@types/core-js": "^0.9.41",
    "@types/express": "^4.0.36",
    "@types/handlebars": "^4.0.33",
    "@types/lodash": "^4.14.64",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/node-uuid": "0.0.28",
    "@types/request": "0.0.45",
    "grunt": "^0.4.5",
    "grunt-eslint": "^19.0.0",
    "grunt-jscs": "^3.0.1",
    "http-server": "^0.10.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "tslint": "^5.4.3",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "commander": "2.9.0",
    "cookie-parser": "^1.4.1",
    "express": "4.14.0",
    "gettext-parser": "1.1.2",
    "grunt-cli": "^1.2.0",
    "handlebars": "4.0.6",
    "lodash": "3.10.1",
    "node-uuid": "1.4.8",
    "request": "2.74.0"
  },
  "scripts": {
    "ts": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/tslint ./src/**/*.ts",
    "check": "npm run lint && npm run test && ./bin/check-coverage",
    "test": "./node_modules/.bin/mocha ./tests/**/*.js",
    "coverage": "./node_modules/.bin/nyc --reporter=html ./node_modules/.bin/mocha ./tests/**/*.js",
    "coverage-server": "./node_modules/.bin/http-server ./coverage",
    "build": "npm run ts",
    "dev": "./node_modules/.bin/tsc -w",
    "postinstall": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tests/**/*",
      "utils/**/*",
      "coverage/**/*",
      "Gruntfile.js"
    ]
  }
}
